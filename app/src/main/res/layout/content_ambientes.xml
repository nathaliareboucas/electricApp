                    android:layout_height="wrap_content"
                    android:src="@drawable/lampada_36_36"
                    android:padding="5dp"
                    android:background="@android:color/darker_gray"/>
            </TableRow>

            <TableRow
                android:layout_marginBottom="5dp">

                <TextView
                    android:text="@string/ambiente3"
                    android:padding="15dp"/>

                <ImageButton
                    android:id="@+id/btnEdt3"
